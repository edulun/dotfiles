let mapleader = " "

:nmap ; :

nnoremap <Leader>y $copy
nnoremap <Leader>d $cut
nnoremap <Leader>p $paste

nnoremap <Leader>v :action TogglePresentationMode<CR>
nnoremap <Leader>f :action ToggleDistractionFreeMode<CR>
nnoremap <Leader>s :action MoveEditorToOppositeTabGroup<CR>

" Git actions
nnoremap <Leader>gp :action Git.Pull<CR>
nnoremap <Leader>gf :action Git.Fetch<CR>
nnoremap <Leader>gc :action Git.Commit<CR>
nnoremap <Leader>gb :action Git.Branches<CR>

inoremap jk <esc>
inoremap kj <esc>

map <C-j> <C-W>j
map <C-k> <C-W>k
map <C-h> <C-W>h
map <C-l> <C-W>l

